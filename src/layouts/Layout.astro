---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Personal website" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/prism-theme.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/fira-code@6.2.0/distr/fira_code.css"
    />
    <ViewTransitions />
  </head>
  <body
    class="text-[var(--text-primary)] bg-[var(--bg-primary)] min-h-screen flex flex-col"
  >
    <Header />
    <main class="flex-grow container mx-auto px-4 py-8 max-w-5xl">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap");

  :root {
    --accent: #f06;
    --accent-light: #f6c;
  }

  html {
    font-family: "Inter", system-ui, sans-serif;
  }

  html[data-theme="dark"] {
    --bg-primary: #1a1a1a;
    --bg-secondary: #222;
    --text-primary: #ffffff;
    --text-secondary: #a0a0a0;
    --border-color: #333;
    --icon-color: #ffffff;
  }

  html[data-theme="light"] {
    --bg-primary: #ffffff;
    --bg-secondary: #f5f5f5;
    --text-primary: #111111;
    --text-secondary: #555555;
    --border-color: #e0e0e0;
    --icon-color: #333333;
  }

  body {
    margin: 0;
    padding: 0;
    background-color: var(--bg-primary);
    color: var(--text-primary);
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  /* SVG theming */
  .theme-icon {
    filter: var(--icon-filter);
  }

  html[data-theme="dark"] .theme-icon {
    filter: brightness(0) invert(1); /* Makes icons white */
  }

  html[data-theme="light"] .theme-icon {
    filter: brightness(0.2); /* Makes icons dark grey */
  }

  /* Exception for colored icons that should keep their colors */
  .colored-icon {
    filter: none !important;
  }

  /* Anchor link styling */
  .anchor-link {
    visibility: hidden;
    margin-left: 0.5rem;
    color: var(--text-secondary);
  }

  h1:hover .anchor-link,
  h2:hover .anchor-link,
  h3:hover .anchor-link,
  h4:hover .anchor-link,
  h5:hover .anchor-link,
  h6:hover .anchor-link {
    visibility: visible;
  }
</style>
