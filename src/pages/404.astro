---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-center h-[70vh] text-center">
    <h1 class="text-4xl font-bold mb-4">404</h1>
    <p class="text-xl mb-8">Oops! The page you're looking for doesn't exist.</p>
    <a href="/" class="px-4 py-2 bg-[#e86] text-white rounded-md hover:bg-[#f85] transition-colors">
      Go Home
    </a>
  </div>
</Layout>
